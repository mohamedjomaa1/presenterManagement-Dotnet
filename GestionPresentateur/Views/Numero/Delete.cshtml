@model GestionPresentateur.Models.Numero

<div class="container mt-4">
    <h2>Delete Number</h2>
    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4>Number</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">Title</dt>
            <dd class="col-sm-10">@Model.Titre</dd>
            <dt class="col-sm-2">Duration</dt>
            <dd class="col-sm-10">@Model.Duree</dd>
            <dt class="col-sm-2">Presenter</dt>
            <dd class="col-sm-10">@Model.Presentateur.NomP</dd>
        </dl>
        <form asp-action="Delete" onsubmit="return confirm('Are you sure you want to delete this?');">
            <input type="hidden" asp-for="CodeN" />
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </form>
    </div>
</div>