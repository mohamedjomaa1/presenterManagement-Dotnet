@model GestionPresentateur.Models.Performance

<div class="container mt-4">
    <h2>Delete Performance</h2>
    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4>Performance</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">Number</dt>
            <dd class="col-sm-10">@Model.Numero.Titre</dd>
            <dt class="col-sm-2">User</dt>
            <dd class="col-sm-10">@Model.Compte.UserName</dd>
            <dt class="col-sm-2">Date</dt>
            <dd class="col-sm-10">@Model.PerformanceDate.ToString("g")</dd>
        </dl>
        <form asp-action="Delete" onsubmit="return confirm('Are you sure you want to delete this?');">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </form>
    </div>
</div>