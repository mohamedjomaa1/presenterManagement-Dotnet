@model GestionPresentateur.Models.Role

<div class="container mt-4">
    <h2>Delete Role</h2>
    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4>Role</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">Label</dt>
            <dd class="col-sm-10">@Model.Libelle</dd>
            <dt class="col-sm-2">Price</dt>
            <dd class="col-sm-10">@Model.Prix.ToString("C")</dd>
        </dl>
        <form asp-action="Delete" onsubmit="return confirm('Are you sure you want to delete this?');">
            <input type="hidden" asp-for="CodeR" />
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </form>
    </div>
</div>