@model GestionPresentateur.Models.Presentateur

<div class="container mt-4">
    <h2>Edit Presenter</h2>
    <form asp-action="Edit" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="CodeP" />
        <div class="form-group">
            <label asp-for="NomP" class="control-label"></label>
            <input asp-for="NomP" class="form-control" />
            <span asp-validation-for="NomP" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="CodeR" class="control-label">Role</label>
            <select asp-for="CodeR" class="form-control">
                @foreach (var role in ViewBag.Roles)
                {
                    <option value="@role.CodeR">@role.Libelle</option>
                }
            </select>
            <span asp-validation-for="CodeR" class="text-danger"></span>
        </div>
        <div class="form-group mt-3">
            <input type="submit" value="Save" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}