@model GestionPresentateur.Models.Presentateur

<div class="container mt-4">
    <h2>Delete Presenter</h2>
    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4>Presenter</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">Name</dt>
            <dd class="col-sm-10">@Model.NomP</dd>
            <dt class="col-sm-2">Role</dt>
            <dd class="col-sm-10">@Model.Role.Libelle</dd>
        </dl>
        <form asp-action="Delete" onsubmit="return confirm('Are you sure you want to delete this?');">
            <input type="hidden" asp-for="CodeP" />
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </form>
    </div>
</div>